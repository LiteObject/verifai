{
    "manifest_version": 3,
    "name": "VerifAI - AI Fact Checker",
    "version": "1.0.0",
    "description": "Fact-check any text on the web using local AI with web search capabilities",
    "author": "LiteObject",
    "homepage_url": "https://github.com/LiteObject/verifai",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "sidePanel",
        "contextMenus"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "VerifAI - Fact Checker"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "css": []
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
